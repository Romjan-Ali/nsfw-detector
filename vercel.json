{
  "version": 2,
  "builds": [
    {
      "src": "backend/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ],
  "outputDirectory": "frontend/dist",
  "buildCommand": "cd frontend && bun run build",
  "installCommand": "bun install && cd frontend && bun install && cd ../backend && bun install",
  "env": {
    "NODE_ENV": "production"
  }
}